---
import "@/styles/global.css";
import Footer from "@components/Footer/Footer.astro";
import Nav from "@components/Nav/Nav.astro";
import BaseHead from "@layouts/BaseHead.astro";
import { DEFAULT_LOCALE } from "@/i18n/config";

interface Props {
  type?: "general";
  navStartStyle?: "default" | "white";
  title: string;
  description: string;
  heroImage?: ImageMetadata;
  noindex?: boolean;
  showFooter?: boolean;
  showNav?: boolean;
  lang?: import("@/i18n/config").Locale;
}

const {
  type = "general",
  navStartStyle = "default",
  title,
  description,
  heroImage,
  noindex = false,
  showFooter = true,
  showNav = true,
  lang = DEFAULT_LOCALE,
} = Astro.props as Props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead
      type={type}
      title={title}
      description={description}
      image={heroImage ? heroImage : undefined}
      noindex={noindex}
      lang={lang}
    />
  </head>
  <body id="body" class="bg-base-50 text-base-900">
    <div class="min-h-[100lvh]">
      {showNav && <Nav startStyle={navStartStyle} lang={lang} />}
      <main>
        <slot />
      </main>
    </div>
    {showFooter && <Footer lang={lang} />}
  </body>
</html>
