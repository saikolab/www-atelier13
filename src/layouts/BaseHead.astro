---
import Seo from "@components/Seo/Seo.astro";
import siteData from "@config/siteData.json";
import { ClientRouter } from "astro:transitions";
import { LOCALES, DEFAULT_LOCALE, type Locale } from "@/i18n/config";

export interface Props {
  type?: "general" | undefined;
  title: string;
  description: string;
  image?: ImageMetadata;
  noindex?: boolean;
  lang?: Locale;
}

const { type = "general", title, description, image, noindex = false, lang = DEFAULT_LOCALE } = Astro.props as Props;

// compute canonical + alternates
const pathname = Astro.url.pathname.replace(/^\/(en|el)(?=\/|$)/, "");
const canonicalBase = Astro.site?.toString().replace(/\/$/, "") ?? "";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" initial-scale="1.0" />

<!-- local font preload -->
<link
  rel="preload"
  href="/fonts/cinzel-decorative.woff2"
  as="font"
  type="font/woff2"
  crossorigin="anonymous"
/>

<!-- Favicons. Generated from https://realfavicongenerator.net/ -->
<link rel="icon" type="image/png" href="/favicons/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
<link rel="shortcut icon" href="/favicons/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />

<!-- other -->
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Canonical & hreflang -->
<link rel="canonical" href={`${canonicalBase}/${lang}${pathname}`} />
{LOCALES.map((l) => (
  <link rel="alternate" hrefLang={l} href={`${canonicalBase}/${l}${pathname}`} />
))}
<link rel="alternate" hrefLang="x-default" href={`${canonicalBase}/${DEFAULT_LOCALE}${pathname}`} />

<Seo type={type} title={title} description={description} image={image} noindex={noindex} />

<!-- no fallback as I saw issues with firefox fallback -->
{siteData.useViewTransitions && <ClientRouter fallback="none" />}
