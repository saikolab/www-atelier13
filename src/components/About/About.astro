---
/**
 * * About section
 */

import profileImage from "@assets/images/bog-01.jpg";
import { Image } from "astro:assets";
import type { Locale } from "@/i18n/config";
import { getLangFromUrl } from "@/i18n/utils";
import { t } from "@/i18n/ui";

interface Props { lang?: Locale }
const urlLang = getLangFromUrl(Astro.url);
const { lang = urlLang } = Astro.props as Props;
---

<section id="about" class="site-container scroll-mt-10 py-8 md:py-12">
	<div class="flex flex-col md:flex-row">
    <div class="md:w-2/3">
        <h2 class="h3 text-primary-500 text-pretty uppercase">{t(lang,'aboutSection','title')}</h2>
        <h3 class="h2 mt-4">{t(lang,'aboutSection','studio')}</h3>
			<div class="bg-base-100 mt-8 p-8 md:mb-20 lg:text-lg">
				<p>{t(lang,'aboutSection','body')}</p>
				<div class="flex w-3/4 justify-end">
                <p class="font-heading-1 text-3xl italic">{t(lang,'aboutSection','signature')}</p>
				</div>
			</div>
		</div>
		<div class="mr-auto max-w-md md:w-1/3 md:max-w-none">
			<div class="my-auto aspect-[3/4] w-full overflow-hidden">
				<Image
					src={profileImage}
					alt={t(lang,'aboutSection','imageAlt')}
					width={450}
					densities={[1.5, 2]}
					class="h-auto min-h-full w-full min-w-full object-cover"
				/>
			</div>
		</div>
	</div>
</section>
